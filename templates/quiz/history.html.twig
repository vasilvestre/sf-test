{% extends 'base.html.twig' %}

{% block title %}Quiz History{% endblock %}

{% block stylesheets %}
    {{ parent() }}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
{% endblock %}

{% block body %}
    <div class="mb-4 animate-fade-in-up">
        <div class="d-flex justify-content-between mb-3 flex-wrap gap-2">
            <a href="{{ path('quiz_index') }}" class="btn btn-outline-secondary hover-lift">
                <i class="bi bi-arrow-left"></i> Back to Home
            </a>
            <a href="{{ path('quiz_all') }}" class="btn btn-success hover-lift">
                <i class="bi bi-play-fill"></i> Take New Quiz
            </a>
        </div>

        <div class="text-center mb-4">
            <h1 class="display-5 gradient-text-primary animate-scale-in">
                {% if category is defined and category %}
                    {{ category.name }} Quiz History
                {% else %}
                    All Quizzes History
                {% endif %}
            </h1>
            <p class="lead animate-fade-in-up stagger-1">View your quiz performance over time</p>
        </div>

        {% if quizResults|length > 0 %}
            <div class="row mb-4">
                <div class="col-md-6">
                    <div class="card text-center mb-3 history-stat-card animate-fade-in-up stagger-2 hover-lift">
                        <div class="card-body">
                            <h5 class="card-title"><i class="bi bi-check-circle"></i> Total Quizzes Taken</h5>
                            <p class="card-text stat-value">{{ totalQuizzesTaken }}</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="card text-center mb-3 history-stat-card animate-fade-in-up stagger-3 hover-lift">
                        <div class="card-body">
                            <h5 class="card-title"><i class="bi bi-trophy"></i> Average Success Rate</h5>
                            <p class="card-text stat-value">{{ averageSuccessRate|number_format }}%</p>
                        </div>
                    </div>
                </div>
            </div>

            <div class="card mb-4 glass-card animate-fade-in-up stagger-4" data-controller="chart-toggle">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5 class="mb-0"><i class="bi bi-graph-up"></i> Performance Trend</h5>
                    <div>
                        <label for="category-filter" class="form-label me-2">Filter by Category:</label>
                        <select id="category-filter" class="form-select form-select-sm d-inline-block w-auto" data-chart-toggle-target="categorySelect">
                            <option value="all">All Categories</option>
                            {% for category in categories %}
                                <option value="{{ category.id }}">{{ category.name }}</option>
                            {% endfor %}
                        </select>
                    </div>
                </div>
                <div class="card-body" data-chart-toggle-target="chart">
                    <div style="height: 300px;">
                        {{ render_chart(chart, {'id': 'history-performance-chart'}) }}
                    </div>
                </div>
            </div>

            <div class="card animate-fade-in-up stagger-5">
                <div class="card-header">
                    <h5 class="mb-0"><i class="bi bi-list"></i> Quiz Sessions</h5>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table results-table">
                            <thead>
                                <tr>
                                    <th><i class="bi bi-calendar3"></i> Date</th>
                                    <th><i class="bi bi-folder"></i> Category</th>
                                    <th><i class="bi bi-percent"></i> Score</th>
                                    <th><i class="bi bi-check2-square"></i> Correct / Total</th>
                                    <th><i class="bi bi-gear"></i> Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for result in quizResults %}
                                    <tr class="hover-lift">
                                        <td>{{ result.createdAt|date('Y-m-d H:i') }}</td>
                                        <td>
                                            {% if result.category %}
                                                <span class="badge bg-primary">{{ result.category.name }}</span>
                                            {% else %}
                                                <span class="badge bg-secondary">Multiple Categories</span>
                                            {% endif %}
                                        </td>
                                        <td>
                                            <span class="badge bg-{{ result.score >= 70 ? 'success' : (result.score >= 50 ? 'warning' : 'danger') }}">
                                                {{ result.score|number_format }}%
                                            </span>
                                        </td>
                                        <td>{{ result.correctAnswers }} / {{ result.totalQuestions }}</td>
                                        <td>
                                            {% if result.questionsData %}
                                                <a href="{{ path('quiz_history_detail', {'id': result.id}) }}" class="btn btn-sm btn-primary hover-scale">
                                                    <i class="bi bi-eye"></i> View Details
                                                </a>
                                            {% else %}
                                                <span class="text-muted">No details available</span>
                                            {% endif %}
                                        </td>
                                    </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        {% else %}
            <div class="alert alert-info mb-0 animate-fade-in-up">
                <i class="bi bi-info-circle"></i>
                <p>You haven't taken any quizzes yet. Start by taking a quiz!</p>
                <a href="{{ path('quiz_all') }}" class="btn btn-primary mt-2 hover-lift">
                    <i class="bi bi-play-fill"></i> Take Your First Quiz
                </a>
            </div>
        {% endif %}
    </div>
{% endblock %}
