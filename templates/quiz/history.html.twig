{% extends 'base.html.twig' %}

{% block title %}Quiz History{% endblock %}

{% block stylesheets %}
    {{ parent() }}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
{% endblock %}

{% block body %}
    <div class="history-container">
        <a href="{{ path('quiz_index') }}" class="back-link">‚Üê Back to Categories</a>

        <div class="header">
            <h1>
                {% if category is defined and category %}
                    {{ category.name }} Quiz History
                {% else %}
                    All Quizzes History
                {% endif %}
            </h1>
            <p>View your quiz performance over time</p>
        </div>

        <div class="chart-container">
            {{ render_chart(chart) }}
        </div>

        <h2>Recent Results</h2>
        {% if results|length > 0 %}
            <table class="results-table">
                <thead>
                    <tr>
                        <th>Date</th>
                        <th>Category</th>
                        <th>Score</th>
                        <th>Correct / Total</th>
                    </tr>
                </thead>
                <tbody>
                    {% for result in results %}
                        <tr>
                            <td>{{ result.createdAt|date('Y-m-d H:i') }}</td>
                            <td>
                                {% if result.category %}
                                    {{ result.category.name }}
                                {% else %}
                                    Multiple Categories
                                {% endif %}
                            </td>
                            <td>{{ result.score|number_format }}%</td>
                            <td>{{ result.correctAnswers }} / {{ result.totalQuestions }}</td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        {% else %}
            <p>No quiz results found.</p>
        {% endif %}
    </div>
{% endblock %}
