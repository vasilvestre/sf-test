{% extends 'base.html.twig' %}

{% block title %}Quiz Results{% endblock %}

{% block stylesheets %}
    {{ parent() }}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
{% endblock %}

{% block body %}
    {% if score >= 90 %}
        <div class="confetti-container">
            {% for i in 1..15 %}
                <div class="confetti-piece"></div>
            {% endfor %}
        </div>
    {% endif %}

    <div class="d-flex justify-content-between align-items-center mb-4 animate-fade-in-up">
        {% if isHistoryDetail is defined and isHistoryDetail %}
            <a href="{{ path('quiz_history') }}" class="btn btn-outline-secondary hover-lift">
                <i class="bi bi-arrow-left"></i> Back to History
            </a>
        {% endif %}
        <h1 class="display-4 m-0 mx-auto gradient-text-primary">
            {% if isHistoryDetail is defined and isHistoryDetail %}
                Quiz History Details
            {% else %}
                Quiz Results
            {% endif %}
        </h1>
        <div style="width: 135px;"></div>
    </div>

    <div class="card mb-4 animate-fade-in-up stagger-1">
        <div class="card-body text-center">
            <div class="circular-progress">
                <svg width="200" height="200">
                    <defs>
                        <linearGradient id="scoreGradient" x1="0%" y1="0%" x2="100%" y2="100%">
                            <stop offset="0%" stop-color="#6366f1" stop-opacity="1" />
                            <stop offset="100%" stop-color="#4338ca" stop-opacity="1" />
                        </linearGradient>
                    </defs>
                    <circle class="circle-bg" cx="100" cy="100" r="90"></circle>
                    <circle class="circle-progress" cx="100" cy="100" r="90" 
                            stroke-dasharray="565" 
                            stroke-dashoffset="{{ 565 - (565 * score / 100) }}">
                    </circle>
                </svg>
                <div class="circular-progress-text">{{ score|number_format }}%</div>
            </div>

            <p class="lead mb-3">
                You answered <strong>{{ correctAnswers }}</strong> out of <strong>{{ totalQuestions }}</strong> questions correctly.
            </p>

            <div class="alert alert-{{ score >= 90 ? 'success' : (score >= 70 ? 'info' : (score >= 50 ? 'warning' : 'danger')) }} mb-4">
                {% if score >= 90 %}
                    <i class="bi bi-trophy-fill"></i> <p class="mb-0">Excellent! You have a great understanding of Symfony 7.0!</p>
                {% elseif score >= 70 %}
                    <i class="bi bi-check-circle-fill"></i> <p class="mb-0">Good job! You have a solid understanding of Symfony 7.0.</p>
                {% elseif score >= 50 %}
                    <i class="bi bi-exclamation-circle-fill"></i> <p class="mb-0">Not bad! Keep learning to improve your Symfony 7.0 knowledge.</p>
                {% else %}
                    <i class="bi bi-book-fill"></i> <p class="mb-0">Keep studying! Symfony 7.0 has a lot to offer.</p>
                {% endif %}
            </div>

            {% if questionsWithAnswers is defined and questionsWithAnswers|length > 0 %}
                <div class="card mb-4 animate-fade-in-up stagger-2">
                    <div class="card-header">
                        <h3 class="mb-0"><i class="bi bi-list-check"></i> Review Your Answers</h3>
                    </div>
                    <div class="card-body">
                        <div class="questions-list">
                            {% for question in questionsWithAnswers %}
                                <div class="card mb-4 question-review">
                                    <div class="card-header">
                                        <h4 class="mb-0">
                                            <i class="bi bi-question-circle"></i> Question {{ loop.index }}
                                        </h4>
                                    </div>
                                    <div class="card-body">
                                        <p class="question-text">{{ question.text|nl2br }}</p>
                                        <div class="list-group mt-3">
                                            {% for answer in question.answers %}
                                                <div class="list-group-item answer-item
                                                    {% if answer.id in question.selectedAnswers and answer.isCorrect %}
                                                        selected correct
                                                    {% elseif answer.id in question.selectedAnswers and not answer.isCorrect %}
                                                        selected
                                                    {% elseif not (answer.id in question.selectedAnswers) and answer.isCorrect %}
                                                        correct
                                                    {% endif %}">
                                                    <div class="d-flex w-100 align-items-center">
                                                        <div class="answer-marker">
                                                            {% if answer.id in question.selectedAnswers and answer.isCorrect %}
                                                                <span class="correct-mark">✓</span>
                                                            {% elseif answer.id in question.selectedAnswers and not answer.isCorrect %}
                                                                <span class="incorrect-mark">✗</span>
                                                            {% elseif not (answer.id in question.selectedAnswers) and answer.isCorrect %}
                                                                <span class="missed-mark">○</span>
                                                            {% endif %}
                                                        </div>
                                                        <div class="flex-grow-1">
                                                            {{ answer.text }}
                                                        </div>
                                                        <div class="d-flex align-items-center gap-2">
                                                            {% if answer.id in question.selectedAnswers and answer.isCorrect %}
                                                                <span class="badge bg-success">Correct</span>
                                                            {% elseif answer.id in question.selectedAnswers and not answer.isCorrect %}
                                                                <span class="badge bg-danger">Incorrect</span>
                                                            {% elseif not (answer.id in question.selectedAnswers) and answer.isCorrect %}
                                                                <span class="badge bg-warning text-dark">Missed</span>
                                                            {% endif %}
                                                            {% if answer.explanation|default %}
                                                                <div class="answer-tooltip">
                                                                    <span class="tooltip-icon"><i class="bi bi-info"></i></span>
                                                                    <div class="tooltip-content">{{ answer.explanation }}</div>
                                                                </div>
                                                            {% endif %}
                                                        </div>
                                                    </div>
                                                </div>
                                            {% endfor %}
                                        </div>
                                    </div>
                                </div>
                            {% endfor %}
                        </div>
                    </div>
                </div>
            {% endif %}

            <div class="card mb-4 animate-fade-in-up stagger-3">
                <div class="card-header">
                    <h3 class="mb-0"><i class="bi bi-bar-chart"></i> Success Rates</h3>
                </div>
                <div class="card-body">
                    <div class="row stats-comparison">
                        {% if categoryStats %}
                            <div class="col-md-6 mb-3">
                                <div class="card h-100 hover-lift">
                                    <div class="card-header">
                                        <h4 class="mb-0">{{ categoryStats.name }} Category</h4>
                                    </div>
                                    <div class="card-body">
                                        <p><strong>Quizzes Taken:</strong> {{ categoryStats.totalQuizzes }}</p>
                                        <p><strong>Average Success Rate:</strong> {{ categoryStats.successRate|number_format }}%</p>
                                        <div class="stat-bar">
                                            <div class="stat-bar-fill" style="width: {{ categoryStats.successRate }}%"></div>
                                        </div>
                                        <p class="mt-3"><strong>Your Score:</strong> {{ score|number_format }}%</p>
                                        <div class="stat-bar">
                                            <div class="stat-bar-fill" style="width: {{ score }}%"></div>
                                        </div>
                                        <p class="mt-3"><strong>Comparison:</strong>
                                            {% if score > categoryStats.successRate %}
                                                <span class="badge bg-success">
                                                    <i class="bi bi-arrow-up"></i> {{ (score - categoryStats.successRate)|number_format }}% above average
                                                </span>
                                            {% elseif score < categoryStats.successRate %}
                                                <span class="badge bg-danger">
                                                    <i class="bi bi-arrow-down"></i> {{ (categoryStats.successRate - score)|number_format }}% below average
                                                </span>
                                            {% else %}
                                                <span class="badge bg-secondary">Equal to average</span>
                                            {% endif %}
                                        </p>
                                    </div>
                                </div>
                            </div>
                        {% endif %}

                        <div class="col-md-{{ categoryStats ? '6' : '12' }} mb-3">
                            <div class="card h-100 hover-lift">
                                <div class="card-header">
                                    <h4 class="mb-0">Overall</h4>
                                </div>
                                <div class="card-body">
                                    <p><strong>Average Success Rate:</strong> {{ overallSuccessRate|number_format }}%</p>
                                    <div class="stat-bar">
                                        <div class="stat-bar-fill" style="width: {{ overallSuccessRate }}%"></div>
                                    </div>
                                    <p class="mt-3"><strong>Your Score:</strong> {{ score|number_format }}%</p>
                                    <div class="stat-bar">
                                        <div class="stat-bar-fill" style="width: {{ score }}%"></div>
                                    </div>
                                    <p class="mt-3"><strong>Comparison:</strong>
                                        {% if score > overallSuccessRate %}
                                            <span class="badge bg-success">
                                                <i class="bi bi-arrow-up"></i> {{ (score - overallSuccessRate)|number_format }}% above average
                                            </span>
                                        {% elseif score < overallSuccessRate %}
                                            <span class="badge bg-danger">
                                                <i class="bi bi-arrow-down"></i> {{ (overallSuccessRate - score)|number_format }}% below average
                                            </span>
                                        {% else %}
                                            <span class="badge bg-secondary">Equal to average</span>
                                        {% endif %}
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            {% if chart is defined %}
                <div class="card mb-4 glass-card animate-fade-in-up stagger-4" data-controller="chart-toggle">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <h3 class="mb-0"><i class="bi bi-graph-up"></i> Your Performance Trend</h3>
                        <div>
                            <label for="category-filter" class="form-label me-2">Filter by Category:</label>
                            <select id="category-filter" class="form-select form-select-sm d-inline-block w-auto" data-chart-toggle-target="categorySelect">
                                <option value="all">All Categories</option>
                                {% if categoryStats %}
                                    <option value="{{ quizResult.category.id }}" selected>{{ categoryStats.name }}</option>
                                {% endif %}
                                {% for category in categories|default([]) %}
                                    {% if not categoryStats or category.id != quizResult.category.id %}
                                        <option value="{{ category.id }}">{{ category.name }}</option>
                                    {% endif %}
                                {% endfor %}
                            </select>
                        </div>
                    </div>
                    <div class="card-body" data-chart-toggle-target="chart">
                        <div style="height: 300px;">
                            {{ render_chart(chart, {'id': 'performance-chart'}) }}
                        </div>
                    </div>
                </div>
            {% endif %}

            <div class="d-flex justify-content-center gap-3 mt-4 flex-wrap animate-fade-in-up stagger-5">
                {% if isHistoryDetail is defined and isHistoryDetail %}
                    <a href="{{ path('quiz_history') }}" class="btn btn-primary hover-lift">
                        <i class="bi bi-arrow-left"></i> Back to History
                    </a>
                    <a href="{{ path('quiz_index') }}" class="btn btn-secondary hover-lift">
                        <i class="bi bi-house"></i> Back to Home
                    </a>
                    <a href="{{ path('quiz_all') }}" class="btn btn-success hover-lift">
                        <i class="bi bi-play-fill"></i> Take New Quiz
                    </a>
                {% else %}
                    <a href="{{ path('quiz_index') }}" class="btn btn-primary hover-lift">
                        <i class="bi bi-house"></i> Back to Home
                    </a>
                    <a href="{{ path('quiz_all') }}" class="btn btn-success hover-lift">
                        <i class="bi bi-play-fill"></i> Try Another Quiz
                    </a>
                    <a href="{{ path('quiz_history') }}" class="btn btn-info hover-lift">
                        <i class="bi bi-clock-history"></i> View Quiz History
                    </a>
                {% endif %}
            </div>
        </div>
    </div>
{% endblock %}
