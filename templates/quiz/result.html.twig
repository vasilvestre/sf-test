{% extends 'base.html.twig' %}

{% block title %}Quiz Results{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .result-container {
            max-width: 800px;
            margin: 0 auto;
            padding: 20px;
            text-align: center;
        }
        .result-card {
            border: 1px solid #ddd;
            border-radius: 5px;
            padding: 30px;
            margin-bottom: 20px;
            background-color: #f9f9f9;
        }
        .score {
            font-size: 3rem;
            font-weight: bold;
            margin: 20px 0;
            color: #3498db;
        }
        .score-details {
            font-size: 1.2rem;
            margin-bottom: 20px;
        }
        .btn-primary {
            background-color: #3498db;
            color: white;
            padding: 10px 20px;
            border-radius: 4px;
            text-decoration: none;
            display: inline-block;
            margin-right: 10px;
        }
        .btn-success {
            background-color: #2ecc71;
            color: white;
            padding: 10px 20px;
            border-radius: 4px;
            text-decoration: none;
            display: inline-block;
        }
        .feedback {
            margin: 20px 0;
            font-size: 1.2rem;
        }
    </style>
{% endblock %}

{% block body %}
    <div class="result-container">
        <h1>Quiz Results</h1>

        <div class="result-card">
            <div class="score">{{ score|number_format }}%</div>

            <div class="score-details">
                You answered {{ correctAnswers }} out of {{ totalQuestions }} questions correctly.
            </div>

            <div class="feedback">
                {% if score >= 90 %}
                    <p>Excellent! You have a great understanding of Symfony 7.0!</p>
                {% elseif score >= 70 %}
                    <p>Good job! You have a solid understanding of Symfony 7.0.</p>
                {% elseif score >= 50 %}
                    <p>Not bad! Keep learning to improve your Symfony 7.0 knowledge.</p>
                {% else %}
                    <p>Keep studying! Symfony 7.0 has a lot to offer.</p>
                {% endif %}
            </div>

            <div>
                <a href="{{ path('quiz_index') }}" class="btn-primary">Try Another Quiz</a>
                <a href="https://symfony.com/doc/current/index.html" target="_blank" class="btn-success">Learn More</a>
            </div>
        </div>
    </div>
{% endblock %}
