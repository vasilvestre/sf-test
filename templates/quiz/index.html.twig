{% extends 'base.html.twig' %}

{% block title %}Symfony 7.0 Quiz System{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .quiz-container {
            max-width: 800px;
            margin: 0 auto;
            padding: 20px;
        }
        .category-card {
            border: 1px solid #ddd;
            border-radius: 5px;
            padding: 15px;
            margin-bottom: 15px;
            background-color: #f9f9f9;
        }
        .category-title {
            font-size: 1.5rem;
            margin-bottom: 10px;
        }
        .category-description {
            color: #666;
            margin-bottom: 15px;
        }
        .btn-primary {
            background-color: #3498db;
            color: white;
            padding: 8px 16px;
            border-radius: 4px;
            text-decoration: none;
            display: inline-block;
            margin-right: 10px;
        }
        .btn-success {
            background-color: #2ecc71;
            color: white;
            padding: 8px 16px;
            border-radius: 4px;
            text-decoration: none;
            display: inline-block;
        }
        .header {
            text-align: center;
            margin-bottom: 30px;
        }
    </style>
{% endblock %}

{% block body %}
    <div class="quiz-container">
        <div class="header">
            <h1>Symfony 7.0 Quiz System</h1>
            <p>Test your knowledge of Symfony 7.0 with these quizzes</p>
            <a href="{{ path('quiz_all') }}" class="btn-success">Take Quiz with All Categories</a>
        </div>

        <h2>Select a Category</h2>

        {% if categories|length > 0 %}
            {% for category in categories %}
                <div class="category-card">
                    <h3 class="category-title">{{ category.name }}</h3>
                    {% if category.description %}
                        <p class="category-description">{{ category.description }}</p>
                    {% endif %}
                    <p>Questions: {{ category.questions|length }}</p>
                    <a href="{{ path('quiz_category', {'id': category.id}) }}" class="btn-primary">Start Quiz</a>
                </div>
            {% endfor %}
        {% else %}
            <p>No quiz categories available. Please check the configuration files.</p>
        {% endif %}
    </div>
{% endblock %}
