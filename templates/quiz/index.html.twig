{% extends 'base.html.twig' %}

{% block title %}Symfony 7.0 Quiz System{% endblock %}

{% block stylesheets %}
    {{ parent() }}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
{% endblock %}

{% block body %}
    <div class="quiz-container">
        <div class="header">
            <h1>Symfony 7.0 Quiz System</h1>
            <p>Test your knowledge of Symfony 7.0 with these quizzes</p>
            <div class="button-group">
                <a href="{{ path('quiz_all') }}" class="btn-success">Take Quiz with All Categories</a>
                {% if mostFailedQuestions|length > 0 %}
                    <a href="{{ path('quiz_failed_questions') }}" class="btn-warning">Practice Failed Questions</a>
                {% endif %}
            </div>
        </div>

        {% if totalQuizzesTaken > 0 %}
            <div class="stats-container">
                <div class="stat-card">
                    <div class="stat-label">Quizzes Taken</div>
                    <div class="stat-value">{{ totalQuizzesTaken }}</div>
                </div>
                <div class="stat-card">
                    <div class="stat-label">Success Rate</div>
                    <div class="stat-value">{{ averageSuccessRate|number_format }}%</div>
                </div>
            </div>

            <div data-controller="chart-toggle">
                <div style="display: flex; justify-content: flex-end; align-items: center; margin-bottom: 10px;">
                    <div>
                        <label for="category-filter">Filter by Category: </label>
                        <select id="category-filter" data-chart-toggle-target="categorySelect">
                            <option value="all">All Categories</option>
                            {% for category in categories %}
                                <option value="{{ category.id }}">{{ category.name }}</option>
                            {% endfor %}
                        </select>
                    </div>
                </div>

                <div class="chart-container" data-chart-toggle-target="chart">
                    <h3>Performance Trend</h3>
                    {{ render_chart(chart, {'id': 'index-performance-chart'}) }}
                </div>
            </div>

            {% if mostFailedQuestions|length > 0 %}
                <div class="most-failed-questions">
                    <h3>Questions You Struggle With ({{ totalFailedQuestions }})</h3>
                    <div class="failed-questions-list">
                        {% for questionFailure in mostFailedQuestions %}
                            <div class="failed-question-item">
                                <div class="question-text">{{ questionFailure.question.text }}</div>
                                <div class="category-badge">{{ questionFailure.question.category.name }}</div>
                                <div class="failure-count">Failed {{ questionFailure.failureCount }} times</div>
                            </div>
                        {% endfor %}
                    </div>
                </div>
            {% endif %}

            {% if mostFailedCategories|length > 0 %}
                <div class="most-failed-categories">
                    <h3>Categories You Struggle With</h3>
                    <div class="failed-categories-list">
                        {% for categoryFailure in mostFailedCategories %}
                            <div class="failed-category-item">
                                <div class="category-name">{{ categoryFailure.category.name }}</div>
                                <div class="failure-count">Failed {{ categoryFailure.failureCount }} times</div>
                                <a href="{{ path('quiz_category', {'id': categoryFailure.category.id}) }}" class="btn-primary btn-small">Practice Now</a>
                            </div>
                        {% endfor %}
                    </div>
                </div>
            {% endif %}
        {% endif %}

        <h2>Select a Category</h2>

        {% if categories|length > 0 %}
            {% for category in categories %}
                <div class="category-card">
                    <h3 class="category-title">{{ category.name }}</h3>
                    {% if category.description %}
                        <p class="category-description">{{ category.description }}</p>
                    {% endif %}
                    <p>Questions: {{ category.questions|length }}</p>

                    {% if categoryStats[category.id].totalQuizzes > 0 %}
                        <div style="margin-bottom: 15px;">
                            <p><strong>Quizzes Taken:</strong> {{ categoryStats[category.id].totalQuizzes }}</p>
                            <p><strong>Success Rate:</strong> {{ categoryStats[category.id].successRate|number_format }}%</p>
                        </div>
                    {% endif %}

                    <a href="{{ path('quiz_category', {'id': category.id}) }}" class="btn-primary">Start Quiz</a>
                </div>
            {% endfor %}
        {% else %}
            <p>No quiz categories available. Please check the configuration files.</p>
        {% endif %}
    </div>
{% endblock %}
