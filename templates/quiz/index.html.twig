{% extends 'base.html.twig' %}

{% block title %}Symfony 7.0 Quiz System{% endblock %}

{% block stylesheets %}
    {{ parent() }}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
{% endblock %}

{% block body %}
    <div class="quiz-container">
        <div class="header">
            <h1>Symfony 7.0 Quiz System</h1>
            <p>Test your knowledge of Symfony 7.0 with these quizzes</p>
            <a href="{{ path('quiz_all') }}" class="btn-success">Take Quiz with All Categories</a>
        </div>

        {% if totalQuizzesTaken > 0 %}
            <div class="stats-container">
                <div class="stat-card">
                    <div class="stat-label">Quizzes Taken</div>
                    <div class="stat-value">{{ totalQuizzesTaken }}</div>
                </div>
                <div class="stat-card">
                    <div class="stat-label">Success Rate</div>
                    <div class="stat-value">{{ averageSuccessRate|number_format }}%</div>
                </div>
            </div>

            <div data-controller="chart-toggle">
                <div style="display: flex; justify-content: flex-end; align-items: center; margin-bottom: 10px;">
                    <div>
                        <label for="category-filter">Filter by Category: </label>
                        <select id="category-filter" data-chart-toggle-target="categorySelect">
                            <option value="all">All Categories</option>
                            {% for category in categories %}
                                <option value="{{ category.id }}">{{ category.name }}</option>
                            {% endfor %}
                        </select>
                    </div>
                </div>

                <div class="chart-container" data-chart-toggle-target="chart">
                    <h3>Performance Trend</h3>
                    {{ render_chart(chart, {'id': 'index-performance-chart'}) }}
                </div>
            </div>
        {% endif %}

        <h2>Select a Category</h2>

        {% if categories|length > 0 %}
            {% for category in categories %}
                <div class="category-card">
                    <h3 class="category-title">{{ category.name }}</h3>
                    {% if category.description %}
                        <p class="category-description">{{ category.description }}</p>
                    {% endif %}
                    <p>Questions: {{ category.questions|length }}</p>

                    {% if categoryStats[category.id].totalQuizzes > 0 %}
                        <div style="margin-bottom: 15px;">
                            <p><strong>Quizzes Taken:</strong> {{ categoryStats[category.id].totalQuizzes }}</p>
                            <p><strong>Success Rate:</strong> {{ categoryStats[category.id].successRate|number_format }}%</p>
                        </div>
                    {% endif %}

                    <a href="{{ path('quiz_category', {'id': category.id}) }}" class="btn-primary">Start Quiz</a>
                </div>
            {% endfor %}
        {% else %}
            <p>No quiz categories available. Please check the configuration files.</p>
        {% endif %}
    </div>
{% endblock %}
