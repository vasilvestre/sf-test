{% extends 'base.html.twig' %}

{% block title %}
    {% if title is defined %}
        {{ title }}
    {% elseif singleCategory %}
        {{ category.name }} Quiz
    {% else %}
        All Categories Quiz
    {% endif %}
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
{% endblock %}

{% block body %}
    <div class="mb-4 animate-fade-in-up">
        <a href="{{ path('quiz_index') }}" class="btn btn-outline-secondary mb-3 hover-lift">
            <i class="bi bi-arrow-left"></i> Back to Categories
        </a>

        <div class="text-center mb-4">
            <h1 class="display-5 gradient-text-primary animate-scale-in">
                {% if title is defined %}
                    {{ title }}
                {% elseif singleCategory %}
                    {{ category.name }} Quiz
                {% else %}
                    Symfony 7.0 Quiz - All Categories
                {% endif %}
            </h1>
            <p class="lead animate-fade-in-up stagger-1">
                {% if isFailedQuestionsQuiz is defined and isFailedQuestionsQuiz %}
                    Practice the questions you've struggled with in the past
                {% else %}
                    Answer the following questions to test your knowledge
                {% endif %}
            </p>

            {% if isFailedQuestionsQuiz is defined and isFailedQuestionsQuiz and totalFailedQuestions is defined %}
                <div class="row mb-4 animate-fade-in-up stagger-2">
                    <div class="col-md-6">
                        <div class="card text-center mb-3 hover-lift">
                            <div class="card-body">
                                <h5 class="card-title"><i class="bi bi-question-circle"></i> Total Failed Questions</h5>
                                <p class="card-text stat-value">{{ totalFailedQuestions }}</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="card text-center mb-3 hover-lift">
                            <div class="card-body">
                                <h5 class="card-title"><i class="bi bi-x-circle"></i> Total Failures</h5>
                                <p class="card-text stat-value">{{ totalFailureCount }}</p>
                            </div>
                        </div>
                    </div>
                </div>

                {% if topFailedQuestions is defined and topFailedQuestions|length > 0 %}
                    <div class="card mb-4 animate-fade-in-up stagger-3">
                        <div class="card-header">
                            <h5 class="mb-0"><i class="bi bi-exclamation-triangle"></i> Questions You Struggle With The Most</h5>
                        </div>
                        <div class="card-body">
                            <div class="list-group">
                                {% for item in topFailedQuestions %}
                                    <div class="list-group-item hover-lift">
                                        <div class="d-flex w-100 justify-content-between align-items-start">
                                            <h6 class="mb-1">{{ item.question.text }}</h6>
                                            <span class="badge bg-primary ms-2">{{ item.question.category.name }}</span>
                                        </div>
                                        <small class="text-muted">
                                            <i class="bi bi-x-circle"></i> Failed {{ item.failureCount }} times
                                        </small>
                                    </div>
                                {% endfor %}
                            </div>
                        </div>
                    </div>
                {% endif %}
            {% endif %}
            <div class="alert alert-info animate-fade-in-up stagger-4">
                <i class="bi bi-info-circle"></i> <strong>Note:</strong> Some questions may have multiple correct answers. Select all that apply.
            </div>
        </div>

        {% if questions|length > 0 %}
            <div data-controller="quiz-progress lazy-load" data-quiz-progress-total-value="{{ questions|length }}" data-lazy-load-threshold-value="0.1" data-lazy-load-root-margin-value="100px" data-lazy-load-stagger-delay-value="80">
                <div class="progress-indicator animate-fade-in-up stagger-5">
                    <div class="d-flex justify-content-between mb-2">
                        <span><i class="bi bi-list-check"></i> Progress</span>
                        <span data-quiz-progress-target="progressText">0 / {{ questions|length }}</span>
                    </div>
                    <div class="progress">
                        <div class="progress-bar" role="progressbar" style="width: 0%" aria-valuenow="0" aria-valuemin="0" aria-valuemax="100" data-quiz-progress-target="progressBar"></div>
                    </div>
                </div>

            <form action="{{ path('quiz_submit') }}" method="post" data-turbo="false">
                {% if singleCategory %}
                    <input type="hidden" name="category_id" value="{{ category.id }}">
                {% endif %}
                {% if isFailedQuestionsQuiz is defined and isFailedQuestionsQuiz %}
                    <input type="hidden" name="is_failed_questions_quiz" value="1">
                {% endif %}

                {% for question in questions %}
                    <div class="card mb-4 question-card" data-lazy-load-target="item">
                        <div class="card-header">
                            <div class="d-flex justify-content-between align-items-center">
                                <h5 class="mb-0">Question {{ loop.index }}</h5>
                                {% if not singleCategory %}
                                    <span class="category-label">
                                        <i class="bi bi-tag"></i> {{ question.category.name }}
                                    </span>
                                {% endif %}
                            </div>
                        </div>
                        <div class="card-body">
                            <p class="card-text question-text mb-4">{{ question.text|nl2br }}</p>

                            <div class="list-group">
                                {% for answer in question.answers|shuffle %}
                                    <div class="list-group-item hover-lift">
                                        <div class="form-check">
                                            <input class="form-check-input" type="checkbox" id="answer-{{ question.id }}-{{ answer.id }}"
                                                name="answers[{{ question.id }}][]" value="{{ answer.id }}">
                                            <label class="form-check-label w-100" for="answer-{{ question.id }}-{{ answer.id }}">
                                                {{ answer.text }}
                                            </label>
                                        </div>
                                    </div>
                                {% endfor %}
                            </div>
                        </div>
                    </div>
                {% endfor %}

                <div class="d-grid gap-2 col-md-6 mx-auto animate-fade-in-up">
                    <button type="submit" class="btn btn-primary btn-lg hover-lift">
                        <i class="bi bi-send"></i> Submit Answers
                    </button>
                </div>
            </form>
            </div>
        {% else %}
            <div class="alert alert-warning">
                <i class="bi bi-exclamation-triangle"></i> No questions available for this quiz.
            </div>
        {% endif %}
    </div>
{% endblock %}
